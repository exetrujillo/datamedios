Package: datamedios
Type: Package
Title: Scraping Chilean Media
Version: 1.2.3
Authors@R: c(
  person(given = "Exequiel", family = "Trujillo", email = "exequiel.trujillo@ug.uchile.cl", role = c("aut", "cre", "cph", "fnd")),
